# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=dall-e-3
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30000

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database

# Redis Configuration (Railway)
REDIS_URL=redis://default:password@host:port

# Storage Configuration (Cloudflare R2 or Supabase)
# Cloudflare R2
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=pixelbuddy-assets
R2_PUBLIC_URL=https://pub-bucket.r2.dev

# OR Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_BUCKET_NAME=pixelbuddy-assets

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_AI_REQUESTS_PER_HOUR=60
RATE_LIMIT_GLOBAL_BURST=1000
RATE_LIMIT_WINDOW_MS=3600000

# Image Processing
AI_MAX_IMAGE_SIZE=512
AI_DEFAULT_COLOR_COUNT=24
AI_GENERATION_TIMEOUT=30000
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_CLOUD_SYNC=true
ENABLE_GIF_EXPORT=true
ENABLE_ANALYTICS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.vercel.app

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Health Check
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics