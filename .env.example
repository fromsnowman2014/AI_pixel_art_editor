# OpenAI API Configuration (GPT-Image-1 Model)
OPENAI_API_KEY=sk-your-openai-api-key-here
# Note: This project uses GPT-Image-1 for superior image generation quality

# Next.js API Routes Configuration
# Using local API routes - no external backend needed
NEXT_PUBLIC_API_URL=

# Database Configuration (Railway Postgres)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database

# Redis Configuration (Railway)
REDIS_URL=redis://default:password@host:port

# Storage Configuration (Supabase/R2)
# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Cloudflare R2 (alternative)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=pixelbuddy-assets

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_AI_REQUESTS_PER_HOUR=60
RATE_LIMIT_GLOBAL_BURST=1000

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_CLOUD_SYNC=true
ENABLE_GIF_EXPORT=true
ENABLE_ANALYTICS=false

# Development
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# AI Image Processing
AI_MAX_IMAGE_SIZE=512
AI_DEFAULT_COLOR_COUNT=24
AI_GENERATION_TIMEOUT=30000

# Canvas Performance
CANVAS_MAX_ZOOM=1600
CANVAS_MIN_ZOOM=50
CANVAS_DEFAULT_SIZE=32