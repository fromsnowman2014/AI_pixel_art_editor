# Local Development Environment Variables
# Copy this file and rename to .env.local for local development
# Add your actual API keys and configuration values

# Supabase Configuration (Primary AI Service)
# Configure these values from your Supabase project dashboard
NEXT_PUBLIC_USE_SUPABASE_AI=true
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Local OpenAI Configuration (Optional - for local API routes)
# OPENAI_API_KEY=sk-your-openai-api-key-here
NEXT_PUBLIC_HAS_OPENAI_KEY=false

# NextAuth Configuration
NEXTAUTH_SECRET=your-local-secret-for-development-only
NEXTAUTH_URL=http://localhost:3000

# Feature Flags for Local Development
ENABLE_AI_GENERATION=true
ENABLE_CLOUD_SYNC=false
ENABLE_GIF_EXPORT=true
ENABLE_ANALYTICS=false

# Development Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database and Storage Configuration
# Configure for Supabase backend services
DATABASE_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres
REDIS_URL=
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_PAT=your-personal-access-token

# AI Configuration for Development
AI_MAX_IMAGE_SIZE=256
AI_DEFAULT_COLOR_COUNT=16
AI_GENERATION_TIMEOUT=15000

# Canvas Settings
CANVAS_MAX_ZOOM=800
CANVAS_MIN_ZOOM=50
CANVAS_DEFAULT_SIZE=32