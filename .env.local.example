# Local Development Environment Variables
# Copy this file and rename to .env.local for local development
# Add your actual API keys and configuration values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Railway Backend URL (for development testing)
NEXT_PUBLIC_API_URL=https://your-backend-url.up.railway.app

# NextAuth Configuration
NEXTAUTH_SECRET=your-local-secret-for-development-only
NEXTAUTH_URL=http://localhost:3000

# Feature Flags for Local Development
ENABLE_AI_GENERATION=true
ENABLE_CLOUD_SYNC=false
ENABLE_GIF_EXPORT=true
ENABLE_ANALYTICS=false

# Development Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Local Storage (for development without cloud services)
# Leave database URLs empty to use local IndexedDB only
DATABASE_URL=
REDIS_URL=
SUPABASE_URL=
SUPABASE_ANON_KEY=

# AI Configuration for Development
AI_MAX_IMAGE_SIZE=256
AI_DEFAULT_COLOR_COUNT=16
AI_GENERATION_TIMEOUT=15000

# Canvas Settings
CANVAS_MAX_ZOOM=800
CANVAS_MIN_ZOOM=50
CANVAS_DEFAULT_SIZE=32